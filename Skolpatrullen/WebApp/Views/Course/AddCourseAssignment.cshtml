@model Database.Models.Assignment
@{
    ViewData["Title"] = "Lägg till inlämning";
}

<a href="##" onClick="history.go(-1); return false;">Gå tillbaks</a>

<h1>
    @Model.CourseId
</h1>

<form method="post" asp-action="AddCourseAssignment">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name" class="control-label">Namn</label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">

            <label asp-for="Deadline" class="control-label">Deadline för inlämning</label>
            <input asp-for="Deadline" type="date" class="form-control" />
            <span asp-validation-for="Deadline" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <div>
                <label asp-for="Description" class="control-label">Text</label>
                <textarea asp-for="Description" type="text" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div>
       @Html.HiddenFor(a => a.CourseId, new { @Value = Model.CourseId })
        <button type="submit" class="btn btn-primary">Lägg till</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
