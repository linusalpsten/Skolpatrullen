@model Database.Models.Course

@{
    ViewData["Title"] = Model.Name;
}

<div class="d-flex" id="wrapper">
    <div class="col-2">
        <div class="list-group">
            <a class="list-group-item disabled" href="#">Nyheter</a>
            <a class="list-group-item disabled" href="#">Information</a>
            <a class="list-group-item" href="@Url.Action("CourseParticipantList", "courseparticipant", new { courseId = Model.Id })">Deltagare</a>
            <a class="list-group-item" href="@Url.Action("LessonCalendar", "lesson" , new { id = Model.Id })">Kalender</a>
            <a class="list-group-item disabled" href="#">Inlämningar</a>
            <a class="list-group-item" href="@Url.Action("CourseFiles", "course", new { courseId = Model.Id })">Kursfiler</a>
        </div>
        <div class="list-group">
            <a class="list-group-item" href="@Url.Action("AddCourseAssignment", "course", new { CourseId = Model.Id })">Lägg till inlämning</a>
            @await Html.PartialAsync("_UploadCourseFiles", new WebApp.ViewModels.UploadCourseFileViewModel { CourseId = Model.Id })

        </div>
    </div>

    <div class="col-8">
        <div class="content">
