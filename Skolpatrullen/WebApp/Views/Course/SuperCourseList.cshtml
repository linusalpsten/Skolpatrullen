@model IEnumerable<Database.Models.Course>

@{
    ViewData["Title"] = "Kurslista";
}
    <a href="##" onClick="history.go(-1); return false;">Gå tillbaka</a>
<h1>Kurslista</h1>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Kursnamn
                </th>
                <th>
                    Skola
                </th>
                <th class="d-none d-lg-table-cell">
                    Startdatum
                </th>
                <th class="d-none d-lg-table-cell">
                    Slutdatum
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Name, "GetCourseById", new { id = item.Id })
                    </td>
                    <td>
                        @item.School.Name
                    </td>
                    <td class="d-none d-lg-table-cell">
                        @Convert.ToString(string.Format("{0:yyyy/MM/dd}", item.StartDate))
                    </td>
                    <td class="d-none d-lg-table-cell">
                        @Convert.ToString(string.Format("{0:yyyy/MM/dd}", item.EndDate))
                    </td>
                    <td>
                        <a class="btn text-danger" href="@Url.Action("RemoveCourse", new { Id = item.Id })"><i class="fa fa-trash-alt fa-lg"></i></a>
                        @*modal not working
                        @await Html.PartialAsync("_RemoveCourse", new WebApp.ViewModels.CourseViewModel { Id = item.Id })*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>